@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = @localizer["Title"];
}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-auto" src="~/2-.png" alt="First slide" style="height : 570px">
            <div class="carousel-caption d-none d-md-block">
                <h5>@localizer["kadroboyu"]</h5>
                <p>@localizer["kadroboyuicerik"]</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-auto align-bottom" src="~/4-.png" alt="Second slide" style="height : 570px">
            <div class="carousel-caption d-none d-md-block">
                <h5>@localizer["bisiklet"]</h5>
                <p>@localizer["bisikleticerik"]</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-auto center" src="~/5-.png" alt="Third slide" style="height : 570px">
            <div class="carousel-caption d-none d-md-block">
                <h5>@localizer["karsilastir"]</h5>
                <p>@localizer["karsilastiricerik"]</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>